else if (ns && name && version && semver.valid(version)) {
  	install(mopath, 'Files installed successfully!')
}

function install(path,msg){
	  fs.mkdirp(path)
  	request.get(serverurl + path)
    	.pipe(zlib.Gunzip())
    	.pipe(tar.Extract({ path: path, strip: 1 }))

    if(msg){
        console.log(msg)
    }
}


